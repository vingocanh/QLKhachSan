@model IEnumerable<QLPhongTro.Models.PhongModel>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenPhong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrangThai)
        </th>
        <th>
            ID Loại Phòng
        </th>
        <th>
            Tên Phòng
        </th>
        <th>
            Giá
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenPhong)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TrangThai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoaiPhong.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoaiPhong.TenLoai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LoaiPhong.GiaTien)
        </td>
        <td>
            @Html.ActionLink("Đặt Phòng", "Book", new { id=item.Id }) 
           
        </td>
    </tr>
}

</table>
